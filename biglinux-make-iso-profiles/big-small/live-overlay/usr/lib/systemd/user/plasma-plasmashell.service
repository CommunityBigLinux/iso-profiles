[Unit]
Description=KDE Plasma Workspace
After=plasma-ksmserver.service plasma-kcminit.service dbus-broker.service
PartOf=graphical-session.target

[Service]
ExecStart=/usr/bin/plasmashell
Restart=always
Type=dbus
BusName=org.kde.plasmashell
Slice=session.slice
TimeoutSec=40sec

[Install]
WantedBy=plasma-core.target
